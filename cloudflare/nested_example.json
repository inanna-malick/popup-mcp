{
  "title": "Project Configuration",
  "elements": [
    {
      "text": "Configure your development environment",
      "id": "intro_text"
    },
    {
      "choice": "Project Type",
      "id": "project_type",
      "options": ["Static Website", "Web Application", "CLI Tool"],
      "Web Application": [
        {
          "choice": "Framework",
          "id": "framework",
          "options": ["React", "Next.js", "Vue", "Svelte"],
          "Next.js": [
            {
              "checkbox": "Enable TypeScript",
              "id": "enable_typescript",
              "default": true,
              "reveals": [
                {
                  "choice": "TypeScript Strictness",
                  "id": "ts_strictness",
                  "options": ["Strict", "Relaxed", "Custom"],
                  "default": 0
                }
              ]
            },
            {
              "checkbox": "Enable Tailwind CSS",
              "id": "enable_tailwind",
              "reveals": [
                {
                  "textbox": "Custom Theme Path",
                  "id": "theme_path",
                  "placeholder": "./theme.config.js"
                }
              ]
            }
          ]
        },
        {
          "multiselect": "Additional Features",
          "id": "additional_features",
          "options": ["Authentication", "Database", "API Integration"],
          "Database": [
            {
              "choice": "Database Type",
              "id": "db_type",
              "options": ["PostgreSQL", "MySQL", "MongoDB", "SQLite"],
              "default": 0
            },
            {
              "checkbox": "Enable migrations",
              "id": "enable_migrations",
              "default": true
            }
          ],
          "API Integration": [
            {
              "textbox": "API Base URL",
              "id": "api_base_url",
              "placeholder": "https://api.example.com"
            },
            {
              "checkbox": "Enable caching",
              "id": "enable_caching",
              "reveals": [
                {
                  "slider": "Cache duration (minutes)",
                  "id": "cache_duration",
                  "min": 1,
                  "max": 60,
                  "default": 15
                }
              ]
            }
          ]
        }
      ],
      "CLI Tool": [
        {
          "checkbox": "Include subcommands",
          "id": "include_subcommands",
          "reveals": [
            {
              "textbox": "Subcommand names (comma-separated)",
              "id": "subcommand_names",
              "placeholder": "init, build, deploy",
              "rows": 2
            }
          ]
        }
      ]
    },
    {
      "group": "Deployment Settings",
      "elements": [
        {
          "checkbox": "Enable CI/CD",
          "id": "enable_cicd",
          "reveals": [
            {
              "choice": "Platform",
              "id": "cicd_platform",
              "options": ["GitHub Actions", "Cloudflare Workers", "Vercel", "Netlify"],
              "Cloudflare Workers": [
                {
                  "textbox": "Account ID",
                  "id": "cf_account_id",
                  "placeholder": "your-account-id"
                },
                {
                  "checkbox": "Enable preview deployments",
                  "id": "enable_preview",
                  "default": true
                }
              ]
            },
            {
              "multiselect": "Deployment Triggers",
              "id": "deployment_triggers",
              "options": ["Push to main", "Pull request", "Manual approval", "Scheduled"],
              "Manual approval": [
                {
                  "textbox": "Approver emails (comma-separated)",
                  "id": "approver_emails",
                  "placeholder": "admin@example.com"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "slider": "Performance Budget (KB)",
      "id": "perf_budget",
      "min": 100,
      "max": 1000,
      "default": 500,
      "when": "selected(@project_type, Web Application)"
    }
  ]
}
