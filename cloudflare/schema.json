{
  "name": "show_popup",
  "description": "Display a native GUI popup window with form elements and wait for user response. Supports text, sliders, checkboxes, text inputs, dropdowns, multiselect, groups, and conditional visibility.",
  "parameters": {
    "type": "object",
    "properties": {
      "definition": {
        "type": "object",
        "description": "The popup window definition with title and elements",
        "properties": {
          "title": {
            "type": "string",
            "description": "Optional title shown in the popup window title bar"
          },
          "elements": {
            "type": "array",
            "description": "Array of UI elements to display in the popup",
            "items": {
              "anyOf": [
                {
                  "type": "object",
                  "description": "Static text display",
                  "properties": {
                    "type": {
                      "type": "string",
                      "const": "text"
                    },
                    "content": {
                      "type": "string",
                      "description": "Text content to display"
                    }
                  },
                  "required": ["type", "content"],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "description": "Numeric slider input",
                  "properties": {
                    "type": {
                      "type": "string",
                      "const": "slider"
                    },
                    "label": {
                      "type": "string",
                      "description": "Label for the slider"
                    },
                    "min": {
                      "type": "number",
                      "description": "Minimum value"
                    },
                    "max": {
                      "type": "number",
                      "description": "Maximum value"
                    },
                    "default": {
                      "type": "number",
                      "description": "Default value (optional, defaults to midpoint)"
                    }
                  },
                  "required": ["type", "label", "min", "max"],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "description": "Boolean checkbox input",
                  "properties": {
                    "type": {
                      "type": "string",
                      "const": "checkbox"
                    },
                    "label": {
                      "type": "string",
                      "description": "Label for the checkbox"
                    },
                    "default": {
                      "type": "boolean",
                      "description": "Default checked state (optional, defaults to false)"
                    },
                    "conditional": {
                      "type": "array",
                      "description": "Elements to show when checkbox is checked (inline conditional)",
                      "items": {
                        "$ref": "#/properties/definition/properties/elements/items"
                      }
                    }
                  },
                  "required": ["type", "label"],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "description": "Text input field (single or multiline)",
                  "properties": {
                    "type": {
                      "type": "string",
                      "const": "textbox"
                    },
                    "label": {
                      "type": "string",
                      "description": "Label for the text input"
                    },
                    "placeholder": {
                      "type": "string",
                      "description": "Placeholder text (optional)"
                    },
                    "rows": {
                      "type": "number",
                      "description": "Number of rows for multiline input (optional, 1 = single line)"
                    }
                  },
                  "required": ["type", "label"],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "description": "Multiple selection checkboxes",
                  "properties": {
                    "type": {
                      "type": "string",
                      "const": "multiselect"
                    },
                    "label": {
                      "type": "string",
                      "description": "Label for the multiselect group"
                    },
                    "options": {
                      "type": "array",
                      "description": "Array of options (strings or objects with inline conditionals)",
                      "items": {
                        "anyOf": [
                          {
                            "type": "string",
                            "description": "Simple option text"
                          },
                          {
                            "type": "object",
                            "description": "Option with inline conditional elements",
                            "properties": {
                              "value": {
                                "type": "string",
                                "description": "Option text"
                              },
                              "conditional": {
                                "type": "array",
                                "description": "Elements to show when this option is selected",
                                "items": {
                                  "$ref": "#/properties/definition/properties/elements/items"
                                }
                              }
                            },
                            "required": ["value", "conditional"],
                            "additionalProperties": false
                          }
                        ]
                      }
                    }
                  },
                  "required": ["type", "label", "options"],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "description": "Single selection dropdown",
                  "properties": {
                    "type": {
                      "type": "string",
                      "const": "choice"
                    },
                    "label": {
                      "type": "string",
                      "description": "Label for the dropdown"
                    },
                    "options": {
                      "type": "array",
                      "description": "Array of options (strings or objects with inline conditionals)",
                      "items": {
                        "anyOf": [
                          {
                            "type": "string",
                            "description": "Simple option text"
                          },
                          {
                            "type": "object",
                            "description": "Option with inline conditional elements",
                            "properties": {
                              "value": {
                                "type": "string",
                                "description": "Option text"
                              },
                              "conditional": {
                                "type": "array",
                                "description": "Elements to show when this option is selected",
                                "items": {
                                  "$ref": "#/properties/definition/properties/elements/items"
                                }
                              }
                            },
                            "required": ["value", "conditional"],
                            "additionalProperties": false
                          }
                        ]
                      }
                    },
                    "default": {
                      "type": "number",
                      "description": "Default selected option index (optional, no selection if omitted)"
                    }
                  },
                  "required": ["type", "label", "options"],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "description": "Labeled group container for nested elements",
                  "properties": {
                    "type": {
                      "type": "string",
                      "const": "group"
                    },
                    "label": {
                      "type": "string",
                      "description": "Label for the group"
                    },
                    "elements": {
                      "type": "array",
                      "description": "Nested elements within the group",
                      "items": {
                        "$ref": "#/properties/definition/properties/elements/items"
                      }
                    }
                  },
                  "required": ["type", "label", "elements"],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "description": "Conditional visibility container (standalone form)",
                  "properties": {
                    "type": {
                      "type": "string",
                      "const": "conditional"
                    },
                    "condition": {
                      "anyOf": [
                        {
                          "type": "string",
                          "description": "Simple label check - shows elements if checkbox is checked OR any multiselect option selected OR choice has selection"
                        },
                        {
                          "type": "object",
                          "description": "Field value match - shows if specific option is selected",
                          "properties": {
                            "field": {
                              "type": "string",
                              "description": "Field label to check"
                            },
                            "value": {
                              "type": "string",
                              "description": "Value that must be selected (checkbox name, multiselect option, or choice option)"
                            }
                          },
                          "required": ["field", "value"],
                          "additionalProperties": false
                        },
                        {
                          "type": "object",
                          "description": "Count condition - shows based on number of selections",
                          "properties": {
                            "field": {
                              "type": "string",
                              "description": "Field label to check"
                            },
                            "count": {
                              "type": "string",
                              "description": "Count comparison like '>2', '=1', '<=3' (checkbox/choice count as 0 or 1, multiselect counts selections)"
                            }
                          },
                          "required": ["field", "count"],
                          "additionalProperties": false
                        }
                      ]
                    },
                    "elements": {
                      "type": "array",
                      "description": "Elements to show when condition is true",
                      "items": {
                        "$ref": "#/properties/definition/properties/elements/items"
                      }
                    }
                  },
                  "required": ["type", "condition", "elements"],
                  "additionalProperties": false
                }
              ]
            }
          }
        },
        "required": ["elements"],
        "additionalProperties": false
      },
      "timeout_ms": {
        "type": "number",
        "description": "Timeout in milliseconds (default: 300000 = 5 minutes)",
        "default": 300000
      }
    },
    "required": ["definition"],
    "additionalProperties": false
  }
}
