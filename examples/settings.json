{
  "title": "Application Settings",
  "elements": [
    {
      "group": "General",
      "id": "general_group",
      "elements": [
        {
          "id": "language",
          "options": [
            "English",
            "Spanish",
            "French",
            "German"
          ],
          "multi": "Language"
        },
        {
          "id": "theme",
          "options": [
            "Light",
            "Dark",
            "Auto"
          ],
          "multi": "Theme"
        },
        {
          "id": "notifications",
          "default": true,
          "check": "Show notifications"
        }
      ]
    },
    {
      "group": "Performance",
      "id": "performance_group",
      "elements": [
        {
          "slider": "Cache size (MB)",
          "id": "cache_size",
          "min": 50,
          "max": 500,
          "default": 200
        },
        {
          "slider": "Max connections",
          "id": "max_connections",
          "min": 1,
          "max": 10,
          "default": 5
        },
        {
          "id": "hw_accel",
          "default": false,
          "check": "Enable hardware acceleration"
        }
      ]
    },
    {
      "group": "Privacy",
      "id": "privacy_group",
      "elements": [
        {
          "id": "usage_data",
          "default": false,
          "check": "Send anonymous usage data"
        },
        {
          "id": "save_history",
          "default": true,
          "check": "Save history"
        },
        {
          "slider": "History days",
          "id": "history_days",
          "min": 1,
          "max": 365,
          "default": 30
        }
      ]
    }
  ]
}