{
  "title": "Choice Element Demo",
  "elements": [
    {
      "text": "Choice elements provide dropdown selection with optional unselected state",
      "id": "intro_text"
    },
    {
      "choice": "Theme",
      "id": "theme",
      "options": ["Light", "Dark", "Auto"]
    },
    {
      "choice": "Difficulty",
      "id": "difficulty",
      "options": ["Easy", "Medium", "Hard"],
      "default": 1
    },
    {
      "checkbox": "Enable expert mode",
      "id": "expert_mode",
      "default": false,
      "when": "selected(@difficulty, Hard)"
    },
    {
      "choice": "Country",
      "id": "country",
      "options": [
        "USA",
        "Canada",
        "Mexico",
        "UK",
        "France",
        "Germany",
        "Spain",
        "Italy",
        "Japan",
        "Australia",
        "Brazil",
        "India",
        "China",
        "South Korea",
        "Other"
      ]
    },
    {
      "textbox": "City",
      "id": "city",
      "placeholder": "Enter your city",
      "when": "@country"
    }
  ]
}
