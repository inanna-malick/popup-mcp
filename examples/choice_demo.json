{
  "title": "Choice Element Demo",
  "elements": [
    {
      "text": "Choice elements provide dropdown selection with optional unselected state",
      "id": "intro_text"
    },
    {
      "id": "theme",
      "options": [
        "Light",
        "Dark",
        "Auto"
      ],
      "select": "Theme"
    },
    {
      "id": "difficulty",
      "options": [
        "Easy",
        "Medium",
        "Hard"
      ],
      "default": "Medium",
      "select": "Difficulty"
    },
    {
      "id": "expert_mode",
      "default": false,
      "when": "selected(difficulty, 'Hard')",
      "check": "Enable expert mode"
    },
    {
      "id": "country",
      "options": [
        "USA",
        "Canada",
        "Mexico",
        "UK",
        "France",
        "Germany",
        "Spain",
        "Italy",
        "Japan",
        "Australia",
        "Brazil",
        "India",
        "China",
        "South Korea",
        "Other"
      ],
      "select": "Country"
    },
    {
      "id": "city",
      "placeholder": "Enter your city",
      "when": "country",
      "input": "City"
    }
  ]
}