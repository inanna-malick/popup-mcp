{
  "title": "Advanced Settings",
  "elements": [
    {
      "id": "show_advanced",
      "default": false,
      "check": "Show advanced options"
    },
    {
      "id": "debug_mode",
      "default": false,
      "when": "show_advanced",
      "check": "Debug mode"
    },
    {
      "slider": "Log level",
      "id": "log_level",
      "min": 0,
      "max": 10,
      "default": 3,
      "when": "show_advanced"
    },
    {
      "id": "output",
      "options": [
        "Console",
        "File",
        "Both"
      ],
      "when": "show_advanced",
      "multi": "Output"
    },
    {
      "slider": "Max threads",
      "id": "max_threads",
      "min": 1,
      "max": 16,
      "default": 4,
      "when": "show_advanced"
    },
    {
      "id": "perf_mode",
      "default": true,
      "check": "Performance mode"
    },
    {
      "id": "gpu_accel",
      "default": true,
      "when": "perf_mode",
      "check": "GPU acceleration"
    },
    {
      "slider": "Cache size",
      "id": "cache_size",
      "min": 0,
      "max": 1000,
      "default": 256,
      "when": "perf_mode"
    }
  ]
}