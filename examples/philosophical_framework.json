{
  "title": "Conceptual Framework Selection",
  "elements": [
    {
      "text": "Design a theoretical lens for analyzing a phenomenon."
    },
    {
      "id": "tradition",
      "options": [
        "Phenomenology",
        "Pragmatism",
        "Critical Theory",
        "Poststructuralism",
        "Complexity Theory"
      ],
      "Phenomenology": [
        {
          "id": "phenom_thinkers",
          "options": [
            "Husserl",
            "Heidegger",
            "Merleau-Ponty",
            "Levinas",
            "van Manen"
          ],
          "Husserl": [
            {
              "id": "transcendental_reduction",
              "default": false,
              "reveals": [
                {
                  "slider": "Bracketing rigor",
                  "id": "bracketing_rigor",
                  "min": 1,
                  "max": 10,
                  "default": 5
                },
                {
                  "text": "Focus on essences and eidetic structures"
                }
              ],
              "check": "Emphasize transcendental reduction"
            }
          ],
          "Heidegger": [
            {
              "id": "dasein_analytics",
              "default": true,
              "reveals": [
                {
                  "id": "existential_structures",
                  "options": [
                    "Being-in-the-world",
                    "Thrownness",
                    "Projection",
                    "Fallenness",
                    "Care",
                    "Being-toward-death"
                  ],
                  "multi": "Existential structures to foreground"
                }
              ],
              "check": "Apply Dasein analytics"
            }
          ],
          "Merleau-Ponty": [
            {
              "id": "emphasize_embodiment",
              "default": true,
              "reveals": [
                {
                  "text": "Foreground lived body (corps vécu) over objective body (Körper)"
                },
                {
                  "slider": "Body-world entanglement emphasis",
                  "id": "body_world_entanglement",
                  "min": 1,
                  "max": 10,
                  "default": 7
                }
              ],
              "check": "Emphasize embodiment"
            }
          ],
          "multi": "Key Thinkers"
        },
        {
          "group": "Phenomenological Method",
          "elements": [
            {
              "id": "use_epoche",
              "default": true,
              "check": "Use epoché/bracketing"
            },
            {
              "id": "phenomenological_reduction",
              "default": true,
              "check": "Apply phenomenological reduction"
            },
            {
              "id": "imaginative_variation",
              "default": false,
              "check": "Perform imaginative variation"
            },
            {
              "slider": "Descriptive fidelity priority",
              "id": "descriptive_fidelity",
              "min": 1,
              "max": 10,
              "default": 8
            }
          ]
        }
      ],
      "Pragmatism": [
        {
          "id": "pragmatist_thinkers",
          "options": [
            "Dewey",
            "James",
            "Peirce",
            "Rorty",
            "West"
          ],
          "Dewey": [
            {
              "id": "instrumentalist_epistemology",
              "default": true,
              "reveals": [
                {
                  "text": "Truth as warrant for action, knowledge as tool for problem-solving"
                }
              ],
              "check": "Apply instrumentalist epistemology"
            },
            {
              "slider": "Emphasis on education/democracy",
              "id": "education_democracy",
              "min": 1,
              "max": 10,
              "default": 5
            }
          ],
          "James": [
            {
              "id": "radical_empiricism",
              "default": false,
              "reveals": [
                {
                  "text": "Relations between things as real as things themselves"
                }
              ],
              "check": "Emphasize radical empiricism"
            },
            {
              "id": "cash_value_criterion",
              "default": true,
              "check": "Use cash value criterion"
            }
          ],
          "Peirce": [
            {
              "id": "triadic_semiotics",
              "default": false,
              "reveals": [
                {
                  "text": "Sign-object-interpretant relations"
                },
                {
                  "id": "sign_types",
                  "options": [
                    "Icon",
                    "Index",
                    "Symbol"
                  ],
                  "multi": "Sign types to analyze"
                }
              ],
              "check": "Apply triadic semiotics"
            }
          ],
          "multi": "Key Figures"
        },
        {
          "slider": "Consequentialism emphasis",
          "id": "consequences",
          "min": 1,
          "max": 10,
          "default": 7,
          "reveals": [
            {
              "text": "Strong consequentialism - evaluate ideas by practical effects",
              "when": "consequences >= 8"
            },
            {
              "text": "Moderate consequentialism - balance theory and practice",
              "when": "consequences >= 4 && consequences < 8"
            },
            {
              "text": "Weak consequentialism - more theoretical grounding",
              "when": "consequences < 4"
            }
          ]
        }
      ],
      "Critical Theory": [
        {
          "id": "crit_gen",
          "options": [
            "Frankfurt School (1st gen)",
            "Habermas/Honneth (2nd gen)",
            "Contemporary critical theory"
          ],
          "Frankfurt School (1st gen)": [
            {
              "id": "frankfurt_theorists",
              "options": [
                "Horkheimer",
                "Adorno",
                "Marcuse",
                "Fromm",
                "Benjamin"
              ],
              "Adorno": [
                {
                  "id": "negative_dialectics",
                  "default": false,
                  "reveals": [
                    {
                      "text": "Resist totalizing systems, preserve non-identity"
                    },
                    {
                      "slider": "Critique of instrumental reason",
                      "id": "instrumental_reason_critique",
                      "min": 1,
                      "max": 10,
                      "default": 8
                    }
                  ],
                  "check": "Apply negative dialectics"
                }
              ],
              "Marcuse": [
                {
                  "id": "one_dimensional_society",
                  "default": false,
                  "reveals": [
                    {
                      "text": "Examine false needs and repressive desublimation"
                    }
                  ],
                  "check": "Analyze one-dimensional society"
                }
              ],
              "multi": "Theorists"
            }
          ],
          "Habermas/Honneth (2nd gen)": [
            {
              "id": "comm_action",
              "default": false,
              "reveals": [
                {
                  "id": "validity_claims",
                  "options": [
                    "Truth",
                    "Rightness",
                    "Sincerity",
                    "Comprehensibility"
                  ],
                  "multi": "Validity claims to analyze"
                },
                {
                  "slider": "Ideal speech situation as regulative ideal",
                  "id": "ideal_speech_situation",
                  "min": 1,
                  "max": 10,
                  "default": 6
                }
              ],
              "check": "Use communicative action theory"
            },
            {
              "id": "recognition_theory",
              "default": false,
              "reveals": [
                {
                  "id": "recognition_forms",
                  "options": [
                    "Love/care",
                    "Rights/respect",
                    "Solidarity/esteem"
                  ],
                  "multi": "Forms of recognition"
                }
              ],
              "check": "Apply recognition theory (Honneth)"
            }
          ],
          "select": "Critical Theory Generation"
        },
        {
          "group": "Critical Orientation",
          "elements": [
            {
              "slider": "Emancipatory interest",
              "id": "emancipation",
              "min": 1,
              "max": 10,
              "default": 8,
              "reveals": [
                {
                  "text": "Strong emancipatory commitment - explicit normative stance",
                  "when": "emancipation >= 7"
                }
              ]
            },
            {
              "id": "ideology_critique",
              "default": true,
              "check": "Ideology critique central"
            },
            {
              "id": "power_structures",
              "options": [
                "Capitalism",
                "Patriarchy",
                "Racism",
                "Colonialism",
                "Heteronormativity"
              ],
              "reveals": [
                {
                  "text": "Intersectional analysis recommended",
                  "when": "count(power_structures) >= 2"
                }
              ],
              "multi": "Power structures to examine"
            }
          ]
        }
      ],
      "Poststructuralism": [
        {
          "id": "poststruct_thinkers",
          "options": [
            "Derrida",
            "Foucault",
            "Deleuze & Guattari",
            "Kristeva",
            "Butler"
          ],
          "Derrida": [
            {
              "id": "apply_deconstruction",
              "default": true,
              "reveals": [
                {
                  "text": "Identify binary oppositions and trace their undoing"
                },
                {
                  "id": "deconstructive_strategies",
                  "options": [
                    "Différance",
                    "Trace",
                    "Supplement",
                    "Iterability"
                  ],
                  "multi": "Deconstructive strategies"
                }
              ],
              "check": "Apply deconstruction"
            }
          ],
          "Foucault": [
            {
              "id": "foucault_period",
              "options": [
                "Archaeological (epistemes)",
                "Genealogical (power/knowledge)",
                "Ethical (care of self)"
              ],
              "Archaeological (epistemes)": [
                {
                  "text": "Analyze discursive formations and historical a priori"
                }
              ],
              "Genealogical (power/knowledge)": [
                {
                  "id": "disciplinary_power",
                  "default": true,
                  "check": "Analyze disciplinary power"
                },
                {
                  "id": "examine_biopower",
                  "default": false,
                  "check": "Examine biopower"
                },
                {
                  "slider": "Power/knowledge entanglement",
                  "id": "power_knowledge_entanglement",
                  "min": 1,
                  "max": 10,
                  "default": 8
                }
              ],
              "Ethical (care of self)": [
                {
                  "text": "Explore technologies of self and ethical self-formation"
                }
              ],
              "select": "Foucauldian period"
            }
          ],
          "Deleuze & Guattari": [
            {
              "id": "use_schizoanalysis",
              "default": false,
              "reveals": [
                {
                  "id": "dg_concepts",
                  "options": [
                    "Rhizome",
                    "Assemblage",
                    "Deterritorialization",
                    "Body without organs",
                    "Becoming"
                  ],
                  "multi": "D&G concepts to deploy"
                }
              ],
              "check": "Use schizoanalysis"
            }
          ],
          "Butler": [
            {
              "id": "performativity_theory",
              "default": false,
              "reveals": [
                {
                  "text": "Identity as iterative performance rather than essence"
                }
              ],
              "check": "Apply performativity theory"
            }
          ],
          "multi": "Key Theorists"
        }
      ],
      "Complexity Theory": [
        {
          "id": "complexity_concepts",
          "options": [
            "Emergence",
            "Self-organization",
            "Edge of chaos",
            "Attractor states",
            "Phase transitions",
            "Nested systems"
          ],
          "Emergence": [
            {
              "slider": "Strong vs weak emergence",
              "id": "emergence_strength",
              "min": 1,
              "max": 10,
              "default": 5,
              "reveals": [
                {
                  "text": "Strong emergence - irreducible to components",
                  "when": "emergence_strength >= 7"
                },
                {
                  "text": "Weak emergence - reducible in principle",
                  "when": "emergence_strength < 4"
                }
              ]
            }
          ],
          "Self-organization": [
            {
              "id": "analyze_feedback_loops",
              "default": true,
              "check": "Analyze feedback loops"
            }
          ],
          "Nested systems": [
            {
              "slider": "Number of system levels",
              "id": "system_levels",
              "min": 2,
              "max": 8,
              "default": 3
            }
          ],
          "multi": "Complexity concepts"
        },
        {
          "id": "apply_nonlinear_dynamics",
          "default": true,
          "reveals": [
            {
              "id": "nonlinear_phenomena",
              "options": [
                "Bifurcations",
                "Chaos",
                "Strange attractors",
                "Sensitive dependence"
              ],
              "multi": "Nonlinear phenomena"
            }
          ],
          "check": "Apply nonlinear dynamics"
        }
      ],
      "select": "Primary Philosophical Tradition"
    },
    {
      "group": "Application Domain",
      "elements": [
        {
          "id": "domains",
          "options": [
            "Education",
            "Healthcare",
            "Organizations",
            "Technology",
            "Environment",
            "Social movements"
          ],
          "reveals": [
            {
              "text": "Consider domain-specific adaptations of framework",
              "when": "count(domains) >= 1"
            }
          ],
          "multi": "Applicable to"
        }
      ]
    },
    {
      "group": "Epistemological Tensions",
      "elements": [
        {
          "text": "⚠ Phenomenology + Poststructuralism tension: essence vs anti-essentialism",
          "when": "selected(tradition, 'Phenomenology') && selected(poststruct_thinkers, 'Derrida')"
        },
        {
          "text": "⚠ Critical Theory + Pragmatism tension: normative grounding vs anti-foundationalism",
          "when": "selected(tradition, 'Critical Theory') && selected(tradition, 'Pragmatism')"
        },
        {
          "text": "✓ Complementary: Complexity + Pragmatism - both emphasize process and consequences",
          "when": "selected(tradition, 'Complexity Theory') && consequences >= 6"
        },
        {
          "text": "⚠ High emancipatory commitment with weak consequentialism - clarify normative basis",
          "when": "emancipation >= 7 && consequences < 4"
        }
      ]
    },
    {
      "group": "Synthesis Recommendation",
      "elements": [
        {
          "id": "integrate",
          "default": false,
          "reveals": [
            {
              "id": "integration_strategy",
              "rows": 4,
              "placeholder": "How will you address epistemological tensions? What is gained through integration?",
              "input": "Integration strategy"
            }
          ],
          "check": "Integrate multiple traditions"
        },
        {
          "text": "Consider creating explicit dialogue between frameworks rather than eclectic borrowing",
          "when": "integrate"
        }
      ]
    }
  ]
}