{
  "title": "System Status",
  "elements": [
    {
      "text": "Current system metrics and health status",
      "id": "header_text"
    },
    {
      "slider": "CPU Usage (%)",
      "id": "cpu",
      "min": 0,
      "max": 100,
      "default": 45
    },
    {
      "slider": "Memory Usage (%)",
      "id": "memory",
      "min": 0,
      "max": 100,
      "default": 62
    },
    {
      "slider": "Disk Usage (%)",
      "id": "disk",
      "min": 0,
      "max": 100,
      "default": 78
    },
    {
      "multiselect": "Network Status",
      "id": "network",
      "options": ["Connected", "Limited", "Offline"]
    },
    {
      "checkbox": "Auto-refresh",
      "id": "autorefresh",
      "default": true
    },
    {
      "slider": "Refresh interval (seconds)",
      "id": "refresh_interval",
      "min": 5,
      "max": 60,
      "default": 30,
      "when": "@autorefresh"
    }
  ]
}
